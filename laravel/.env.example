# =====================================================
# üß±  APPLICATION CONFIG
# =====================================================
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =====================================================
# ‚öôÔ∏è  LOGGING & SECURITY
# =====================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
BCRYPT_ROUNDS=12

# =====================================================
# üíæ  DATABASE (MySQL via Docker)
# =====================================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=blog_db
DB_USERNAME=blog_user
DB_PASSWORD=blog_pass

# =====================================================
# üßë‚Äçüíª  SESSION & CACHE
# =====================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

# =====================================================
# üîå  REDIS / QUEUE (optional)
# =====================================================
